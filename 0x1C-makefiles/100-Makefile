SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ) $(CFLAGS)

-include $(OBJ:.o=.d)

$(OBJ):
	$(CC) -c $(@:.o=.c) -o $@
	$(CC) -MM $(@:.o=.c) > $*.d

clean:
	-$(RM) *~ $(NAME)

oclean:
	-$(RM) $(OBJ) $(OBJ:.o=.d)

fclean: clean oclean
	-$(RM) $(NAME)

re: fclean all
